<h2>Lista das categorias</h2>
<hr>
<a href="/admin/categorias/add"><button type="button" class="btn btn-primary">Nova Categoria</button></a>
<br>
<br>
{{#each Categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{this.Nome}}</h4>
            <small>{{this.Slug}}</small><br>
            <small>Data de criação: {{this.Data}}</small><br><br>
            <div id="actions" style="float: right;">
                <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-warning"><img src="https://raw.githubusercontent.com/google/material-design-icons/master/editor/2x_web/ic_mode_edit_black_48dp.png" title="Editar categoria" width="25px"></button></a>
                <a href="/admin/categorias/del/{{_id}}"><button class="btn btn-danger"><img src="https://raw.githubusercontent.com/google/material-design-icons/master/action/2x_web/ic_delete_black_48dp.png" title="Deletar categoria" width="25px"></button></a>
            </div>
        </div>
    </div>
{{else}}

{{/each}}
